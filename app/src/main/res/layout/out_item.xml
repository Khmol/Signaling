<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvOutNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:ems="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="">
    </TextView>

    <EditText
        android:id="@+id/etOutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivOutTimeSwitch"
        app:layout_constraintLeft_toRightOf="@+id/tvOutNumber"
        android:textSize="18sp"
        android:ems="7"
        android:inputType="textPersonName"/>

    <ImageView
        android:id="@+id/ivOutTimeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/swOutState"
        app:layout_constraintLeft_toRightOf="@+id/etOutName"
        android:contentDescription="ivOutItem">
    </ImageView>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swOutState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@+id/swOff"
        android:textOn="@+id/swOn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivOutTimeSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>