<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlvInOutNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="">
        </TextView>
        <EditText
            android:id="@+id/etlvInOutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ivInOutItem"
            app:layout_constraintLeft_toRightOf="@+id/tvlvInOutNumber"
            android:textSize="16sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="132"/>

    <ImageView
        android:id="@+id/ivInOutItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="ivInOutItem">
    </ImageView>
</android.support.constraint.ConstraintLayout>